script/source = "extends Node2D

@export var bullet_scene: PackedScene        # Drag & drop the bullet scene here
@export var ameridium_bullet_scene: PackedScene
@export var bullet_speed: float = 600.0      # Speed of the spawned bullets
@export var knockback_force: float = 200.0   # Knockback magnitude applied to the parent
@export var amulet_timer : PackedScene


@export var description: String              # Reference to the timer for cooldown

var has_bag_of_tools: bool = false
var bag_of_tools_timer : Timer

var has_ameridium_gun : bool = false
var ameridium_gun_timer: Timer
var can_shoot: bool = true

@export var microbot: PackedScene
var microbot_timer: Timer

var shooting_weapon_timer : Timer

func _ready():
	
	for amulet_id in GlobalVariables.player_amulets:
		if GlobalVariables.amulets[amulet_id].has_timer:
			var amulet_timer_representation = amulet_timer.instantiate()
			amulet_timer_representation.name = str(amulet_id) + \"timer\"
			amulet_timer_representation.wait_time = GlobalVariables.amulets[amulet_id].timer_reload
			add_child(amulet_timer_representation)
	
	if GlobalVariables.player_amulets.has(0):
		has_bag_of_tools = true
		bag_of_tools_timer = assign_timer(0, _on_ameridium_gun_timeout)
		shooting_weapon_timer = bag_of_tools_timer
	if GlobalVariables.player_amulets.has(10):
		has_ameridium_gun = true
		ameridium_gun_timer = assign_timer(10, _on_ameridium_gun_timeout)
		bullet_scene = ameridium_bullet_scene
		shooting_weapon_timer = ameridium_gun_timer
	if GlobalVariables.player_amulets.has(9):
		microbot_timer = assign_timer(9, _on_microbot_timeout)
		microbot_timer.set_one_shot(false)
		microbot_timer.start()

func _unhandled_input(event):
	# Check if the player wants to shoot
	if GlobalVariables.game_is_on and (has_bag_of_tools or has_ameridium_gun) and Input.is_action_just_pressed(\"fire\") and can_shoot:
		fire_weapon()

func fire_weapon() -> void:
	if bullet_scene:
		# Spawn the bullet
		var bullet = bullet_scene.instantiate()
		bullet.global_position = global_position
		get_tree().current_scene.add_child(bullet)
		 
		# Determine shooting direction based on player's input
		var input_direction = get_parent().direction

		# Default to shooting right if no inputd
		if input_direction == Vector2.ZERO:
			input_direction = Vector2.RIGHT
		bullet.set_velocity(Vector2(get_parent().velocity.x, 0) + input_direction * bullet_speed)
		get_parent().velocity.x -= knockback_force
		# Start cooldown
		can_shoot = false
		shooting_weapon_timer.start()

func assign_timer(amulet_id : int, timeout_function) -> Timer:
	var timer = find_child(str(amulet_id) + \"timer\", false, false)
	timer.wait_time = GlobalVariables.amulets[amulet_id].timer_reload
	timer.timeout.connect(timeout_function)
	return timer

func _on_microbot_timeout():
	if microbot:
		var instance = microbot.instantiate()
		instance.global_position = global_position
		get_parent().get_parent().add_child(instance)

func _on_ameridium_gun_timeout():
	can_shoot = true
"

